{{#each posts}}
<article data-article-id="{{articleId}}" class="article-single lo-full">
  {{#if articleTitle}}
  <header class="lo-full">
  <h1>{{ articleTitle }}</h1>
  </header>
  {{/if}}
  <p><small>Publisert den {{articlePublishedDate}} klokken {{articlePublishedTime}} av <a href="//www.hiof.no/nor/om-hogskolen/sok-pa-sidene/profil/?&displayitem={{authorId}}&module=admin" title="Se {{authorName}} sin profil">{{authorName}}</a></small></p>
  <p class="intro">{{ articleIntro }}</p>
  <div class="picture-container ratio-3-2"><img src="//www.hiof.no/neted/services/file/?hash={{articleImage}}" alt="{{articleImageAltText}}" class="picture" /></div>
  {{{ articleContent }}}
  <footer>
  <p><small>Sist oppdatert {{articleUpdated}} av <a href="//www.hiof.no/nor/om-hogskolen/sok-pa-sidene/profil/?&displayitem={{authorId}}&module=admin" title="Se {{authorName}} sin profil">{{authorName}}</a></small></p>
  </footer>
  {{#if category}}
    <h2>Kategorier</h2>
    {{#each category}}
    <a href="#/{{urlize this}}/kategori/{{@key}}" class="article-category-link">{{this}}</a>
    {{/each}}
  {{/if}}
  {{#if relatedArticles}}
  <aside class="article-related">
    <h2>Relaterte artikler</h2>
    <div class="outlet">
    {{#each relatedArticles}}

    <div class="lo-half">
      <article data-article-id="{{this.articleId}}" class="article article-entry {{#if articleExternal}}article-external{{/if}}">
        <a href="#/{{urlize this.articleTitle}}/a/{{this.articleId}}" title="Link til {{ this.articleTitle }}">
          <div class="picture-container ratio-3-2"><img src="//www.hiof.no/neted/services/file/?hash={{this.articleImage}}" alt="{{this.articleImageAltText}}" class="picture" /></div>
          <h3>{{ this.articleTitle }}</h3>
          <p class="lead-paragraph">{{ this.articleIntro }}</p>
        </a>
      </article>
    </div>
    {{/each}}
  </div>
  </aside>
  {{/if}}

</article>
{{/each}}
